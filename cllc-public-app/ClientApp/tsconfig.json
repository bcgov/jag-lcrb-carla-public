{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
	  "incremental": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@models*": ["app/models*"],
      "@services*": ["app/services*"],
      "@shared*": ["app/shared*"],
      "@components*": ["app/components*"],
      "@app*": ["app*"]
    }
  },
  "angularCompilerOptions": {
  }
}
